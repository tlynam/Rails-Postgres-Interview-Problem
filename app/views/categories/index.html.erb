<div class="container-fluid">
  <% @categories.each do |category| %>
    <div class="row category-row">
      <div class="col-md-12">
        <div class="category-title">
          <%= category.title %>
        </div>
        <div class="row">
          <% category.display_posts.each do |post| %>
            <div class="col-md-3">
              <div class="row">
                <div class="col-md-12  post-title">
                  <%= post.title %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 post-body">
                  <%= post.body %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <hr>
      </div>
    </div>
  <% end %>
</div>
